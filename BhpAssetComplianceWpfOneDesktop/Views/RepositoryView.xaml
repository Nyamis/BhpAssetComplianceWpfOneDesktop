                                <Grid Grid.Column="2">
                                    <Button Content="..."  Command="{Binding SelectDepressurizationComplianceDataCSVFileCommand}"/>
                                </Grid>
                            </Grid>

                        </Grid>
                    </GroupBox>

                    <GroupBox Header="{x:Static resources:StringResources.Geotechnical}" Grid.Row="3">
