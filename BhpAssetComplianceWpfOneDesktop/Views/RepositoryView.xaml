                                </Grid>
                                <Grid Grid.Column="2">
                                    <Button Content="..."  Command="{Binding SelectGeotechnicalNotesDataCSVFileCommand}"/>
                                </Grid>
                            </Grid>

                        </Grid>
                    </GroupBox>

                    <GroupBox Header="{x:Static resources:StringResources.QuartersReconciliationFactors}"  Grid.Row="4">
